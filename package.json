{
    "name": "csaposapp",
    "version": "1.0.0",
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently \"npm:dev:react\" \"npm:dev:electron\"",
        "dev:react": "vite",
        "dev:electron": "cross-env APP_DEV=true electron electron/main.js",
        "build": "vite build",
        "start": "npm run build && electron electron/main.js",
        "dist": "npm run build && electron-builder",
        "dist:dir": "npm run build && electron-builder --dir"
    },
    "build": {
        "appId": "com.example.my-electron-vite-react-app",
        "productName": "csaposapp",
        "directories": {
            "buildResources": "build",
            "output": "dist-electron"
        },
        "files": [
            "dist",
            "electron"
        ],
        "extraResources": [],
        "mac": {
            "category": "public.app-category.developer-tools"
        },
        "win": {
            "target": "nsis"
        }
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^3.0.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^23.0.0",
        "electron-builder": "^25.1.8",
        "postcss": "^8.5.3",
        "tailwindcss": "^3.4.17",
        "vite": "^4.0.0"
    },
    "dependencies": {
        "axios": "^1.8.2",
        "daisyui": "^5.0.2",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.3.0"
    }
}
